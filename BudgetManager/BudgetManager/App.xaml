<Application x:Class="BudgetManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BudgetManager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ForegroundColor">#FFF1F1F1</SolidColorBrush>
            <SolidColorBrush x:Key="ForegroundHoverColor">#FF007ACC</SolidColorBrush>
            <SolidColorBrush x:Key="BackgroundColor">#FF252526</SolidColorBrush>
            <SolidColorBrush x:Key="BackgroundHoverColor">#FF3E3E40</SolidColorBrush>
            <SolidColorBrush x:Key="BorderColor">#FF252526</SolidColorBrush>
            <SolidColorBrush x:Key="BorderHoverColor">#FF3E3E40</SolidColorBrush>

            <Style x:Key="TitleSize" TargetType="TextBlock">
                <Setter Property="Control.FontSize" Value="42"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
